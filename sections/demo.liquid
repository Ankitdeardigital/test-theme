{%- style -%}
  .main-body {
    text-align: center;
    padding: 20px;
    background-color: #e47474;
    border: 1px solid #e5e5e5;
    margin-top: 20px;
  }
  .main-body h2 {
    font-size: 24px;
    margin-bottom: 20px;
  }
  .main-body div {
    margin-bottom: 20px;
  }
  .main-body div:last-child {
    margin-bottom: 0;
  }
{%- endstyle -%}
<div class="main-body">
<h2>{{ section.settings.title }}</h2>

{% for block in section.blocks %}
  {% case block.type %}
    {% when 'liquid' %}
      <div {{ block.shopify_attributes }}>
        {{ block.settings.liquid }}
      </div>
    {% when 'custom-text' %}
      <div {{ block.shopify_attributes }}>
        {{ block.settings.custom-text-field }}
      </div>
  {% endcase %}
{% endfor %}
</div>
{% schema %}
  {
    "name": "demo",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Custom content heading",
          "default": "Title"
        }
      ],
      "blocks": [
        {
          "name": "Custom Liquid",
          "type": "liquid",
          "settings": [
            {
              "type": "liquid",
              "id": "liquid",
              "label": "Custom Liquid",
              "info": "Add Liquid code to create theme customizations."
            }
          ]
        },
        {
          "name": "Custom Text",
          "type": "custom-text",
          "settings": [
            {
              "type": "textarea",
              "id": "custom-text-field",
              "label": "Text"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "demo"
        }
      ]
  }
{% endschema %}
